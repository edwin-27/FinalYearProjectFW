@if (TempData["LogoutMessage"] != null)
{
    <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 9999;">
        <div class="toast show bg-success text-white" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header bg-success text-white">
                <strong class="me-auto">Fashion Warehouse</strong>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
                @TempData["LogoutMessage"]
            </div>
        </div>
    </div>
}


<div class="w-100 text-center text-black mt-4"
     style="background-color: palegoldenrod; padding: 4rem 1rem; border-radius: 30px ;">

    <img src="/images/logoFW.png" alt="Fashion Warehouse Logo"
         style="width: 300px; height: auto;" class="mb-4" />

    <div class="mx-auto" style="max-width: 1000px;">
        <h1 class="display-5">Welcome to Fashion Warehouse</h1>

        <p class="lead">Step into Style</p>
        <p class="lead">Explore all our amazing products here</p>
        <a href="@Url.Action("Index", "Category")" class="btn btn-dark btn-lg mt-3">Click here to shop now</a>
    </div>
</div>

<div class="container my-5">
    <div class="row g-4">
        <!-- Explore Mens -->
        <div class="col-md-6">
            <div class="position-relative text-white" style="background: url('/images/crew-clothing-discount-codes-banner.jpeg') center center / cover no-repeat; height: 300px; border-radius: 8px;">
                <div class="position-absolute top-50 start-50 translate-middle text-center">
                    <h2 class="fw-bold">Explore Clothing</h2>
                    <a href="@Url.Action("Index", "Category", new { id = "CLO" })" class="btn btn-light mt-2">Shop Now</a>
                </div>
            </div>
        </div>

        <!-- Explore Womens -->
        <div class="col-md-6">
            <div class="position-relative text-white" style="background: url('/images/card-item2.jpg') center center / cover no-repeat; height: 300px; border-radius: 8px;">
                <div class="position-absolute top-50 start-50 translate-middle text-center">
                    <h2 class="text-black">Explore Trainers</h2>
                    <a href="@Url.Action("Index", "Category", new { id = "TR" })" class="btn btn-light mt-2">Shop Now</a>
                </div>
            </div>
        </div>
    </div>
</div>




